<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/structure/head.ejs') %> 
</head>
    <body>
    
       

        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">

                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#navbar-collapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a href="/" class="navbar-brand">Artist of the Decade</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/albums" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                aria-haspopup="true" aria-expanded="false">Albums <span class="caret"></span></a>
                        </li>
                        <li><a href="/mixtapes" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                aria-haspopup="true" aria-expanded="false">Mixtapes <span class="caret"></span></a>
                        </li>
                        <li><a href="/eps" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                aria-haspopup="true" aria-expanded="false">Eps <span class="caret"></span></a>
                        </li>
                    </ul><!-- nav -->
                </div><!-- navbar-collapse -->
            </div><!-- container -->
        </nav>
    </header>
        
        <div class="card mb-3" style="max-width: 1100px;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="/images/<%= img %> " alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= pageTitle %></h5>
                  <p class="card-text"> <%= summary %> </p>
                  <p class="card-text"><small class="text-muted">albums sold : <%= albumsSold %> </small></p>
                  <p class="card-text"><small class="text-muted">year released : <%= year %> </small></p>
                  <% trackList.forEach(track => { %>
                   
                  <ol class="list-group list-group-numbered">
                    <li class="list-group-item"><%= track %> </li>
                  </ol>
                  <% }) %>
                </div>
              </div>
            </div>
          </div>
          
          <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <h1 class="feedback-form-title">Review <%= pageTitle %></h1>
                    <form class="feedback-form">
                        <div class="form-group">
                            <label for="feedback-form-name">Name</label>
                            <input type="text" class="form-control" id="feedback-form-name" placeholder="Enter your name">
                        </div>
    
                        <div class="form-group">
                            <label for="feedback-form-title">Title</label>
                            <input type="text" class="form-control" id="feedback-form-title" 
                                placeholder="<%= pageTitle %>  ">  
                        </div>
                        <div class="form-group">
                            <label for="feedback-form-favoriteTrack">Favorite Track</label>
                            <input type="text" class="form-control" id="feedback-form-favoriteTrack" 
                                placeholder="Favoite Track">  
                        </div>
                        <div class="form-group">
                            <label for="feedback-form-review">Review</label>
                            <textarea type="text" placeholder="Enter your review, then hit the submit" class="form-control"
                                id="feedback-form-review" rows="6"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default pull-right">Submit</button>
                    </form>
            </div>


            
            <aside class="col-sm-8">
                <div class="maincontent feedback">
                    <h2 class="article-title">Recent Reviews</h2>
                    <div class="feedback-favoriteTrack">


                    </div>
                    <div class="feedback-review">
                        
                    </div>
                </div>
            </aside><!-- secondary -->
            <script src="/js/feedback.js"></script>
    </body>

</html>