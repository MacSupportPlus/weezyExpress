<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/structure/head.ejs') %> 
</head>
    <body>
        <header>
            <div class="jumbotron hidden-xs">
                <iframe width="100%" height="700" src="https://www.youtube.com/embed/uxpDa-c-4Mc" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                
            </div><!-- jumbotron -->
    
            <nav class="navbar navbar-inverse">
                <div class="container">
                    <div class="navbar-header">
    
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                            data-target="#navbar-collapse" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
    
                        <a href="/" class="navbar-brand">Artist of the Decade</a>
                    </div>
                    <div class="collapse navbar-collapse" id="navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/albums" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                    aria-haspopup="true" aria-expanded="false">Albums <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <% albumObjects.forEach(albumObj => { %>
                                    <li><a href= "/album/<%= albumObj.shortName %> "><%= albumObj.title %> </a></li>
                                    <li role="separator" class="divider"></li>
                                    <% }) %>
                                </ul>
                            </li>
                            <li><a href="/mixtapes" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                    aria-haspopup="true" aria-expanded="false">Mixtapes <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <% mixtapeObjects.forEach(mixtapeObj => { %>
                                    <li><a href= "/album/<%= mixtapeObj.shortName %> "><%= mixtapeObj.title %> </a></li>
                                    <li role="separator" class="divider"></li>
                                    <% }) %>
                                </ul>
                            </li>
                            <li><a href="/eps" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                    aria-haspopup="true" aria-expanded="false">Eps <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <% epObjects.forEach(epObj => { %>
                                    <li><a href= "/album/<%= epObj.shortName %> "><%= epObj.title %> </a></li>
                                    <li role="separator" class="divider"></li>
                                    <br />
                                    <% }) %>
                                </ul>
                            </li>
                        </ul><!-- nav -->
                    </div><!-- navbar-collapse -->
                </div><!-- container -->
            </nav>
        </header>
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div class="maincontent">
                        <% albumObjects.forEach(albumObject => { %> 
                        <article class="article">
                            <div class="card text-center">
                                    <div class= "row">
                                        <div class="card border-secondary mb-3" style="max-width: 900px; border: black">
                                            <div class="row g-0">
                                              <div class="col-md-4">
                                                <img width="80%" height="200px"src="/images/<%= albumObject.albumCover %>"  alt="...">
                                                <% albumObject.trackList.forEach(track => { %>
                                                    <ol class="list-group list-group-flush">
                                                        <li class="list-group-item"><%= track %> </li>
                                                        <% }) %>
                                                    </ol>
                                              </div>
                                              <div class="col-md-8">
                                                <div class="card-body">
                                                  <h5 class="card-title"><%= albumObject.title %></h5>
                                                  <p class="card-text"><%= albumObject.summary %></p>
                                                   
                                                
                                            </div>
                                        </div>
                                      </div>
                                    </div>   
                                     
                               
                                    
                                </div>
                            </article><!-- article -->
                            <% }) %>
                        </div>
                    </div>
            
                
                         
            
                            
            
                            
                <aside class="col-sm-4">
                    <article class="sidebar">
                        <h1 class="sidebar-title text-center">Discography</h1>
                    </article><!-- article -->
                </aside><!-- secondary -->
                <aside class="col-sm-4">
                    <div class="pixgrid text-center">
                        
                    <h1>Albums</h1>
                    <% albumObjects.forEach(albumObj => { %>
                       
                
                        <a href="http://localhost:3000/album/<%= albumObj.shortName %> ">
                            <img height="30%" width="20%"src="/images/<%= albumObj.albumCover %>" class="card-img-top" alt="...">
                             
                            <% }) %>
                        </a>
                    
                        
                </div>
                    </div>
                </aside><!-- secondary -->
            </div>
        </div><!-- container -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
            integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
            crossorigin="anonymous"></script>
   <container>
   
     
                
           
        
    
       
    
    
    </body>

</html>